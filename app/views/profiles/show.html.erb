<!-- app/views/profiles/show.html.erb -->
<div class="max-w-4xl mx-auto p-6">
  <div class="flex items-center gap-6">
    <div class="flex-none">
      <% if current_user.respond_to?(:avatar) && current_user.avatar.attached? %>
        <%= image_tag current_user.avatar.variant(resize_to_fill: [96,96]), class: "w-24 h-24 rounded-full object-cover" %>
      <% else %>
        <div class="w-24 h-24 rounded-full bg-gray-200 dark:bg-neutral-700 flex items-center justify-center text-xl font-semibold text-gray-800 dark:text-neutral-100">
          <%= current_user.full_name.split.map(&:first).first(2).join.upcase rescue current_user.email[0..1].upcase %>
        </div>
      <% end %>
    </div>

    <div class="min-w-0">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-neutral-100"><%= current_user.full_name %></h1>
      <p class="text-sm text-gray-500 dark:text-neutral-400"><%= current_user.email %></p>

      <div class="mt-3 flex flex-wrap gap-2">
        <span class="text-xs inline-flex items-center px-2.5 py-0.5 rounded-full bg-gray-100 dark:bg-neutral-700 text-gray-700 dark:text-neutral-200">Criado em: <strong class="ml-2"><%= l(current_user.created_at, format: :long) %></strong></span>
        <span class="text-xs inline-flex items-center px-2.5 py-0.5 rounded-full bg-gray-100 dark:bg-neutral-700 text-gray-700 dark:text-neutral-200">Último login: <strong class="ml-2"><%= current_user.current_sign_in_at ? l(current_user.current_sign_in_at, format: :short) : "—" %></strong></span>
        <span class="text-xs inline-flex items-center px-2.5 py-0.5 rounded-full bg-gray-100 dark:bg-neutral-700 text-gray-700 dark:text-neutral-200">Total de logins: <strong class="ml-2"><%= current_user.sign_in_count %></strong></span>
      </div>
    </div>

    <div class="ml-auto">
      <%= link_to 'Editar perfil', edit_profile_path, class: 'inline-flex items-center px-4 py-2 border rounded-md text-sm font-medium hover:bg-gray-50 dark:hover:bg-neutral-700' %>
    </div>
  </div>

  <!-- perfil detalhado -->
  <div class="mt-8 bg-white dark:bg-neutral-900 border border-gray-100 dark:border-neutral-700 rounded-lg p-6">
    <h2 class="text-lg font-semibold mb-4 text-gray-900 dark:text-neutral-100">Detalhes</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <p class="text-xs text-gray-500 dark:text-neutral-400">Primeiro nome</p>
        <p class="mt-1 text-sm text-gray-800 dark:text-neutral-100"><%= current_user.first_name.presence || "—" %></p>
      </div>

      <div>
        <p class="text-xs text-gray-500 dark:text-neutral-400">Último nome</p>
        <p class="mt-1 text-sm text-gray-800 dark:text-neutral-100"><%= current_user.last_name.presence || "—" %></p>
      </div>

      <div>
        <p class="text-xs text-gray-500 dark:text-neutral-400">Email</p>
        <p class="mt-1 text-sm text-gray-800 dark:text-neutral-100"><%= current_user.email %></p>
      </div>

      <div>
        <p class="text-xs text-gray-500 dark:text-neutral-400">IP de último login</p>
        <p class="mt-1 text-sm text-gray-800 dark:text-neutral-100"><%= current_user.current_sign_in_ip.presence || "—" %></p>
      </div>
    </div>
  </div>
</div>
