<div class="w-full max-w-md">
  <div class="rounded-xl bg-gray-900/60 p-8 shadow-lg ring-1 ring-white/5 backdrop-blur">
    <h2 class="text-center text-2xl font-bold text-white mb-6">Criar conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- Erros (mantive o partial do Devise; caso queira, comento abaixo como estilizar internamente) -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <!-- Email -->
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.email_field :email,
                  id: "#{resource_name}_email",
                  autofocus: true,
                  autocomplete: "email",
                  required: true,
                  class: "block w-full rounded-md bg-white/5 px-3 py-2 text-white placeholder:text-gray-400 border border-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-400" %>
          </div>
        </div>

        <!-- Password -->
        <div>
          <div class="flex items-baseline justify-between">
            <%= f.label :password, "Password", class: "block text-sm font-medium text-white" %>
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-400">(<%= @minimum_password_length %> caracteres)</span>
            <% end %>
          </div>
          <div class="mt-1">
            <%= f.password_field :password,
                  id: "#{resource_name}_password",
                  autocomplete: "new-password",
                  required: true,
                  class: "block w-full rounded-md bg-white/5 px-3 py-2 text-white placeholder:text-gray-400 border border-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-400" %>
          </div>
        </div>

        <!-- Password confirmation -->
        <div class = "mt-1">
          <%= f.label :password_confirmation, "Confirme a senha", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation,
                  id: "#{resource_name}_password_confirmation",
                  autocomplete: "new-password",
                  required: true,
                  class: "block w-full rounded-md bg-white/5 px-3 py-2 text-white placeholder:text-gray-400 border border-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-400" %>
          </div>
        </div>

        <!-- Submit -->
        <div>
          <%= f.submit "Criar conta",
                class: "flex w-full justify-center rounded-md bg-indigo-500 px-3 py-1.5 text-sm/6 font-semibold text-white hover:bg-indigo-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" %>
        </div>
      </div>
    <% end %>

    <div class="mt-10 text-center text-sm/6 text-gray-400">
      JÃ¡ tem conta?
      <%= link_to "Entrar", new_session_path(resource_name), class: "font-semibold text-indigo-400 hover:text-indigo-300" %>
    </div>
  </div>
</div>
