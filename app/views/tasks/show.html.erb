<% content_for :title, (@task.subject.presence || "Detalhes da tarefa") %>

<!-- full width page -->
<div class="min-h-screen bg-slate-50 w-full">
  <!-- full-width padding (remo√ß√£o de max-w) -->
  <div class="w-full">

    <!-- Header -->
    <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-6">
      <div class="min-w-0 lg:pr-8">
        <h1 class="text-2xl lg:text-3xl font-extrabold text-slate-900 leading-tight">
          <%= @task.subject.presence || "Sem t√≠tulo" %>
        </h1>

        <p class="mt-2 text-sm lg:text-base text-slate-500 max-w-3xl">
          Detalhes da tarefa "<%= @task.subject.presence || 'Sem t√≠tulo' %>" do onboarding
          "<%= @task.onboarding.try(:title).presence || 'Sem t√≠tulo' %>".
        </p>

        <div class="mt-4 flex flex-wrap items-center gap-3">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= status_badge_class(@task.status) %>">
            <%= status_label(@task.status) %>
          </span>

          <div class="flex items-center gap-3 text-sm text-slate-600">
            <span class="text-xs text-slate-400">Respons√°vel</span>
            <% if @task.assignee_id.present? && (assignee_user = User.find_by(id: @task.assignee_id)) %>
              <div class="flex items-center gap-2">
                <%= image_tag avatar_for(assignee_user), class: "w-8 h-8 rounded-full" %>
                <span class="font-medium text-slate-800"><%= assignee_user.full_name rescue assignee_user.email %></span>
              </div>
            <% else %>
              <span class="text-slate-700">Sem respons√°vel</span>
            <% end %>
          </div>

          <div class="text-sm text-slate-500">
            <span class="text-xs text-slate-400 mr-2">Criado</span>
            <span><%= l(@task.created_at, format: :short) if @task.created_at %></span>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center gap-3">
        <%= link_to "Editar", edit_onboarding_task_path(@task.onboarding, @task),
            class: "inline-flex items-center px-3 py-1.5 border rounded-md text-sm bg-white hover:bg-slate-50" %>

        <button type="button"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-emerald-600 hover:bg-emerald-500 text-white text-sm font-semibold shadow">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          Marcar conclu√≠da
        </button>

        <%= link_to "Voltar", onboarding_path(@task.onboarding), class: "text-sm text-slate-600" %>
      </div>
    </div>

    <!-- MAIN GRID: left = descri√ß√£o/anexos/coment√°rios (2fr), right = meta (1fr) -->
    <div class="mt-10 grid grid-cols-1 lg:grid-cols-[2fr_1fr] gap-8">

      <!-- LEFT: description / attachments / comments -->
      <main class="space-y-6">

        <!-- DESCRIPTION box (separada, ampla) -->
        <section class="bg-white rounded-xl shadow-md ring-1 ring-slate-100 p-6">
          <h2 class="text-lg font-semibold text-slate-800 mb-4">Descri√ß√£o</h2>

          <div class="prose max-w-none text-slate-700">
            <% if @task.body.present? %>
              <%= simple_format(@task.body) %>
            <% else %>
              <div class="text-sm text-slate-400 bg-slate-50 p-4 rounded-md">Nenhuma descri√ß√£o fornecida.</div>
            <% end %>
          </div>

          <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-slate-600">
            <div>
              <p class="text-xs text-slate-400">Lembrete</p>
              <p class="mt-1"><%= @task.reminder.present? ? l(@task.reminder, format: :short) : '‚Äî' %></p>
            </div>

            <div>
              <p class="text-xs text-slate-400">HubSpot ID</p>
              <p class="mt-1 text-slate-700"><%= @task.hubspot_id.presence || '‚Äî' %></p>
            </div>
          </div>
        </section>

        <!-- ATTACHMENTS box -->
        <section class="bg-white rounded-xl shadow-md ring-1 ring-slate-100 p-6">
          <h3 class="text-md font-semibold text-slate-800 mb-3">Anexos</h3>
          <div class="border-2 border-dashed border-slate-100 rounded-md p-6 text-sm text-slate-500 bg-slate-50">
            <p>Ainda n√£o h√° sistema de arquivos ‚Äî espa√ßo reservado para anexos.</p>
            <div class="mt-4">
              <button class="px-3 py-1.5 rounded-md bg-white text-sm hover:bg-slate-50 border">Adicionar anexo</button>
            </div>
          </div>
        </section>

        <!-- COMMENTS box -->
        <section class="bg-white rounded-xl shadow-md ring-1 ring-slate-100 p-6">
          <h3 class="text-md font-semibold text-slate-800 mb-3">Coment√°rios</h3>
          <div class="border-2 border-dashed border-slate-100 rounded-md p-6 text-sm text-slate-500 bg-slate-50">
            <p>Ainda n√£o h√° a op√ß√£o de coment√°rios.</p>
          </div>
        </section>

      </main>

      <!-- RIGHT: compact meta column -->
      <aside class="space-y-6">

        <!-- DATES & STATUS box -->
        <div class="bg-white rounded-xl shadow-md ring-1 ring-slate-100 p-6">
          <h3 class="text-md font-semibold text-slate-800 mb-4">Datas & status</h3>

          <dl class="text-sm text-slate-700 space-y-3">
            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Vencimento</dt>
              <dd class="font-medium"><%= @task.due_date.present? ? @task.due_date.strftime("%d/%m/%Y %H:%M") : '‚Äî' %></dd>
            </div>

            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Conclus√£o</dt>
              <dd class="font-medium"><%= @task.completion_date.present? ? @task.completion_date.strftime("%d/%m/%Y %H:%M") : '‚Äî' %></dd>
            </div>

            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Prioridade</dt>
              <dd class="font-medium"><%= @task.priority.presence || '‚Äî' %></dd>
            </div>

            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Visibilidade</dt>
              <dd class="font-medium"><%= @task.visibility ? 'Vis√≠vel' : 'Oculta' %></dd>
            </div>

            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Criado em</dt>
              <dd class="font-medium"><%= l(@task.created_at, format: :short) %></dd>
            </div>
          </dl>
        </div>

        <!-- ASSIGNEE / quick contact -->
        <div class="bg-white rounded-xl shadow-md ring-1 ring-slate-100 p-6">
          <h3 class="text-md font-semibold text-slate-800">Respons√°vel</h3>

          <% if @task.assignee_id.present? && (assignee_user = User.find_by(id: @task.assignee_id)) %>
            <div class="mt-3 flex items-center gap-3">
              <%= image_tag avatar_for(assignee_user), class: "w-12 h-12 rounded-full" %>
              <div class="min-w-0">
                <p class="text-sm font-medium text-slate-800"><%= assignee_user.full_name rescue assignee_user.email %></p>
                <p class="text-xs text-slate-500"><%= assignee_user.email %></p>
                <% if assignee_user.respond_to?(:phone) && assignee_user.phone.present? %>
                  <p class="text-xs text-slate-500 mt-1">üìû <%= assignee_user.phone %></p>
                <% end %>
              </div>
            </div>
          <% else %>
            <p class="text-sm text-slate-500 mt-2">Sem respons√°vel definido.</p>
          <% end %>
        </div>

      </aside>
    </div>
  </div>
</div>
