<% content_for :title, (@task.subject.presence || "Detalhes da tarefa") %>

<div class="space-y-8">
  <!-- Header -->
  <div class="flex flex-col gap-6">
    <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-6">
      <div class="min-w-0 flex-1">
        <p class="text-sm font-medium text-gray-500 dark:text-neutral-400 mb-2">Detalhes da tarefa</p>
        <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-neutral-100 leading-tight">
          <%= @task.subject.presence || "Sem título" %>
        </h1>

        <p class="mt-3 text-sm text-gray-600 dark:text-neutral-400">
          Do onboarding <span class="font-medium text-gray-900 dark:text-neutral-200"><%= link_to @task.onboarding.try(:title).presence || 'Sem título', onboarding_path(@task.onboarding), class: "hover:underline text-blue-600 dark:text-blue-400" %></span>
        </p>

        <div class="mt-4 flex flex-wrap items-center gap-3">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= status_badge_class(@task.status) %>">
            <%= status_label(@task.status) %>
          </span>

          <% if @task.priority.present? %>
            <span class="inline-flex items-center px-2.5 py-1 rounded text-xs font-medium bg-amber-100 text-amber-800 dark:bg-amber-900/30 dark:text-amber-400">
              <%= @task.priority %>
            </span>
          <% end %>

          <% if @task.assignee_id.present? && (assignee_user = User.find_by(id: @task.assignee_id)) %>
            <div class="flex items-center gap-2 pl-2 border-l border-gray-300 dark:border-neutral-600">
              <%= image_tag avatar_for(assignee_user), class: "w-6 h-6 rounded-full" %>
              <span class="text-xs text-gray-600 dark:text-neutral-400"><%= assignee_user.full_name rescue assignee_user.email %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-2 sm:gap-3">
        <% if @task.status != 'completed' %>
          <button type="button" data-action="click"
                  class="inline-flex items-center justify-center gap-2 px-4 py-2.5 rounded-lg bg-green-600 hover:bg-green-700 text-white text-sm font-semibold shadow transition dark:bg-green-700 dark:hover:bg-green-600">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            Concluir
          </button>
        <% end %>

        <%= link_to "Editar", edit_onboarding_task_path(@task.onboarding, @task),
            class: "inline-flex items-center justify-center px-4 py-2.5 rounded-lg border border-gray-300 text-gray-700 text-sm font-medium hover:bg-gray-50 shadow-sm transition dark:border-neutral-600 dark:text-neutral-300 dark:hover:bg-neutral-700" %>

        <%= link_to "← Voltar", onboarding_path(@task.onboarding), 
            class: "inline-flex items-center justify-center px-4 py-2.5 text-gray-600 text-sm font-medium hover:text-gray-900 transition dark:text-neutral-400 dark:hover:text-neutral-200" %>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- LEFT: Main content (2 columns) -->
    <main class="lg:col-span-2 space-y-6">

      <!-- Description Section -->
      <section class="space-y-4">
        <h2 class="text-sm font-semibold text-gray-900 dark:text-neutral-100">Descrição</h2>
        
        <div class="text-sm text-gray-700 dark:text-neutral-300 leading-relaxed">
          <% if @task.body.present? %>
            <%= simple_format(@task.body) %>
          <% else %>
            <p class="text-gray-500 dark:text-neutral-400 italic">Nenhuma descrição fornecida.</p>
          <% end %>
        </div>

        <% if @task.reminder.present? || @task.hubspot_id.present? %>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-6 pt-6 border-t border-gray-200 dark:border-neutral-700">
            <% if @task.reminder.present? %>
              <div>
                <p class="text-xs font-medium text-gray-500 dark:text-neutral-400 uppercase">Lembrete</p>
                <p class="mt-2 text-sm text-gray-900 dark:text-neutral-100"><%= l(@task.reminder, format: :short) %></p>
              </div>
            <% end %>

            <% if @task.hubspot_id.present? %>
              <div>
                <p class="text-xs font-medium text-gray-500 dark:text-neutral-400 uppercase">HubSpot ID</p>
                <p class="mt-2 text-sm font-mono text-gray-900 dark:text-neutral-100"><%= @task.hubspot_id %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </section>

      <!-- Attachments Section -->
      <section class="space-y-4">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-neutral-100">Anexos</h3>
        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center bg-gray-50 dark:bg-neutral-900 dark:border-neutral-700">
          <svg class="mx-auto h-8 w-8 text-gray-400 dark:text-neutral-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <p class="text-sm text-gray-600 dark:text-neutral-400 mt-2">Ainda não há anexos nesta tarefa.</p>
        </div>
      </section>

      <!-- Comments Section -->
      <section class="space-y-4">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-neutral-100">Comentários</h3>
        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center bg-gray-50 dark:bg-neutral-900 dark:border-neutral-700">
          <svg class="mx-auto h-8 w-8 text-gray-400 dark:text-neutral-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
          </svg>
          <p class="text-sm text-gray-600 dark:text-neutral-400 mt-2">Sistema de comentários em desenvolvimento.</p>
        </div>
      </section>

    </main>

    <!-- RIGHT: Sidebar metadata -->
    <aside class="space-y-6">

      <!-- Timeline & Status -->
      <section class="space-y-4">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-neutral-100">Cronograma</h3>
        
        <dl class="space-y-3">
          <div class="flex items-center justify-between">
            <dt class="text-xs font-medium text-gray-500 dark:text-neutral-400">Vencimento</dt>
            <dd class="text-sm font-medium text-gray-900 dark:text-neutral-100">
              <% if @task.due_date.present? %>
                <%= @task.due_date.strftime("%d/%m/%Y") %>
              <% else %>
                <span class="text-gray-400 dark:text-neutral-500">—</span>
              <% end %>
            </dd>
          </div>

          <div class="flex items-center justify-between">
            <dt class="text-xs font-medium text-gray-500 dark:text-neutral-400">Conclusão</dt>
            <dd class="text-sm font-medium text-gray-900 dark:text-neutral-100">
              <% if @task.completion_date.present? %>
                <span class="inline-flex items-center gap-1 text-green-700 dark:text-green-400">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                  <%= @task.completion_date.strftime("%d/%m/%Y") %>
                </span>
              <% else %>
                <span class="text-gray-400 dark:text-neutral-500">—</span>
              <% end %>
            </dd>
          </div>

          <div class="flex items-center justify-between">
            <dt class="text-xs font-medium text-gray-500 dark:text-neutral-400">Visibilidade</dt>
            <dd class="text-sm">
              <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium <%= @task.visibility ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400' : 'bg-gray-100 text-gray-700 dark:bg-neutral-900 dark:text-neutral-400' %>">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M10 12a2 2 0 100-4 2 2 0 000 4z" /><path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" /></svg>
                <%= @task.visibility ? 'Visível' : 'Oculta' %>
              </span>
            </dd>
          </div>
        </dl>
      </section>

      <!-- Assignee Card -->
      <section class="space-y-4">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-neutral-100">Responsável</h3>
        
        <% if @task.assignee_id.present? && (assignee_user = User.find_by(id: @task.assignee_id)) %>
          <div class="bg-gray-50 dark:bg-neutral-700/50 rounded-lg p-4">
            <div class="flex items-center gap-3">
              <%= image_tag avatar_for(assignee_user), class: "w-10 h-10 rounded-full" %>
              <div class="min-w-0 flex-1">
                <p class="text-sm font-medium text-gray-900 dark:text-neutral-100"><%= assignee_user.full_name rescue assignee_user.email %></p>
                <p class="text-xs text-gray-600 dark:text-neutral-400 truncate"><%= assignee_user.email %></p>
              </div>
            </div>
            <% if assignee_user.respond_to?(:phone) && assignee_user.phone.present? %>
              <p class="mt-3 text-xs text-gray-600 dark:text-neutral-400">
                <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773c.346.72.827 1.365 1.4 1.893.573.528 1.218 1.01 1.938 1.356l.773-1.548a1 1 0 011.06-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 4 14.18 4 9.5S7.82 2 12.5 2h2a1 1 0 011 1v2.153z" /></svg>
                <%= assignee_user.phone %>
              </p>
            <% end %>
          </div>
        <% else %>
          <div class="bg-gray-50 dark:bg-neutral-700/50 rounded-lg p-4 text-center">
            <svg class="mx-auto h-8 w-8 text-gray-400 dark:text-neutral-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-sm text-gray-600 dark:text-neutral-400">Sem responsável definido</p>
          </div>
        <% end %>
      </section>

      <!-- Metadata -->
      <section class="space-y-4 border-t border-gray-200 dark:border-neutral-700 pt-6">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-neutral-100">Informações</h3>
        
        <dl class="space-y-3 text-xs">
          <div class="flex justify-between">
            <dt class="text-gray-500 dark:text-neutral-400">Criada em</dt>
            <dd class="font-medium text-gray-900 dark:text-neutral-100"><%= l(@task.created_at, format: :short) %></dd>
          </div>

          <div class="flex justify-between">
            <dt class="text-gray-500 dark:text-neutral-400">Status</dt>
            <dd class="font-medium">
              <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-semibold <%= status_badge_class(@task.status) %>">
                <%= status_label(@task.status) %>
              </span>
            </dd>
          </div>
        </dl>
      </section>

    </aside>
  </div>
</div>
