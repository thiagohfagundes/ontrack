<!-- app/views/tasks/show.html.erb -->
<% content_for :title, (@task.subject.presence || "Detalhes da tarefa") %>

<div class="min-h-screen bg-slate-50">
  <div class="max-w-7xl mx-auto py-10">

    <!-- Header -->
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
      <div class="min-w-0">
        <h3 class="text-sm font-medium text-slate-500 mb-1">Título da tarefa:</h3>
        <h1 class="text-2xl md:text-3xl font-extrabold text-slate-900 truncate"><%= @task.subject.presence || "Sem título" %></h1>

        <div class="mt-3 flex items-center gap-3 flex-wrap">
          <!-- Tipo / status badge -->
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= status_badge_class(@task.status) %>">
            <%= status_label(@task.status) %>
          </span>

          <!-- Assignee -->
          <div class="flex items-center gap-2 text-sm text-slate-600">
            <span class="text-xs text-slate-400">Responsável</span>
            <% if @task.assignee_id.present? %>
              <%# se assignee for um user, busque via association; caso contrário use assignee string %>
              <% if defined?(User) && (assignee_user = User.find_by(id: @task.assignee_id)) %>
                <div class="flex items-center gap-2">
                  <%= image_tag avatar_for(assignee_user), class: "w-8 h-8 rounded-full" %>
                  <span class="font-medium text-slate-800"><%= assignee_user.full_name rescue assignee_user.email %></span>
                </div>
              <% else %>
                <span class="text-slate-700"><%= @task.assignee.presence || "Sem responsável" %></span>
              <% end %>
            <% else %>
              <span class="text-slate-700">Sem responsável</span>
            <% end %>
          </div>

          <!-- Created info -->
          <div class="flex items-center gap-2 text-sm text-slate-500">
            <span class="text-xs text-slate-400">Criado</span>
            <span><%= l(@task.created_at, format: :short) if @task.created_at %></span>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center gap-3">
        <%= link_to "Editar", edit_onboarding_task_path(@task.onboarding, @task), class: "inline-flex items-center px-3 py-1.5 border rounded-md text-sm bg-white hover:bg-slate-50" %>

        <!-- botão visual, depois ligamos ao controller -->
        <button
          type="button"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-emerald-600 hover:bg-emerald-500 text-white text-sm font-semibold shadow">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          Marcar concluída
        </button>

        <%= link_to "Voltar", onboarding_path(@task.onboarding), class: "text-sm text-slate-600" %>
      </div>
    </div>

    <!-- Grid principal: left = descrição / anexos; right = datas + metadados + comentários -->
    <div class="mt-8 grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left column (2/3) -->
      <main class="lg:col-span-2 space-y-6">

        <!-- Descrição (caixa separada grande) -->
        <section class="bg-white rounded-lg shadow-md ring-1 ring-slate-100 p-6">
          <h2 class="text-lg font-semibold text-slate-800 mb-3">Descrição</h2>

          <div class="prose max-w-none text-slate-700">
            <% if @task.body.present? %>
              <%= simple_format(@task.body) %>
            <% else %>
              <div class="text-sm text-slate-400 bg-slate-50 p-4 rounded-md">Nenhuma descrição fornecida.</div>
            <% end %>
          </div>

          <!-- metadados inline sob a descrição -->
          <div class="mt-6 grid grid-cols-2 gap-4 text-sm text-slate-600">
            <div>
              <p class="text-xs text-slate-400">Lembrete</p>
              <p class="mt-1"><%= @task.reminder.present? ? l(@task.reminder, format: :short) : '—' %></p>
            </div>

            <div>
              <p class="text-xs text-slate-400">HubSpot ID</p>
              <p class="mt-1"><%= @task.hubspot_id.presence || '—' %></p>
            </div>
          </div>
        </section>

        <!-- Anexos (placeholder) -->
        <section class="bg-white rounded-lg shadow-md ring-1 ring-slate-100 p-6">
          <h3 class="text-md font-semibold text-slate-800 mb-3">Anexos</h3>
          <div class="border-2 border-dashed border-slate-100 rounded-md p-6 text-sm text-slate-500">
            <p>Ainda não há sistema de arquivos — espaço reservado para anexos.</p>
            <div class="mt-4">
              <button class="px-3 py-1.5 rounded-md bg-slate-50 text-sm hover:bg-slate-100">Adicionar anexo</button>
            </div>
          </div>
        </section>

        <section class="bg-white rounded-lg shadow-md ring-1 ring-slate-100 p-6">
          <h3 class="text-md font-semibold text-slate-800 mb-3">Comentários</h3>
          <div class="border-2 border-dashed border-slate-100 rounded-md p-6 text-sm text-slate-500">
            <p>Ainda não há a opção de comentários.</p>
          </div>
        </section>

      </main>

      <!-- Right column (1/3) -->
      <aside class="space-y-6">

        <!-- Datas / prazos em caixa separada -->
        <div class="bg-white rounded-lg shadow-md ring-1 ring-slate-100 p-6">
          <h3 class="text-md font-semibold text-slate-800 mb-4">Datas & status</h3>

          <dl class="text-sm text-slate-700 space-y-3">
            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Vencimento</dt>
              <dd><%= @task.due_date.present? ? @task.due_date.strftime("%d/%m/%Y %H:%M") : '—' %></dd>
            </div>

            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Conclusão</dt>
              <dd><%= @task.completion_date.present? ? @task.completion_date.strftime("%d/%m/%Y %H:%M") : '—' %></dd>
            </div>

            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Prioridade</dt>
              <dd><%= @task.priority.presence || '—' %></dd>
            </div>

            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Visibilidade</dt>
              <dd><%= @task.visibility ? 'Visível' : 'Oculta' %></dd>
            </div>

            <div class="flex justify-between">
              <dt class="text-xs text-slate-400">Criado em</dt>
              <dd><%= l(@task.created_at, format: :short) %></dd>
            </div>
          </dl>
        </div>

        <!-- Meta (responsável + contato rápido) -->
        <div class="bg-white rounded-lg shadow-md ring-1 ring-slate-100 p-6">
          <h3 class="text-md font-semibold text-slate-800">Responsável</h3>

          <% if @task.assignee_id.present? && (assignee_user = User.find_by(id: @task.assignee_id)) %>
            <div class="mt-3 flex items-center gap-3">
              <%= image_tag avatar_for(assignee_user), class: "w-10 h-10 rounded-full" %>
              <div class="min-w-0">
                <p class="text-sm font-medium text-slate-800"><%= assignee_user.full_name rescue assignee_user.email %></p>
                <p class="text-xs text-slate-500"><%= assignee_user.email %></p>
              </div>
            </div>
          <% else %>
            <p class="text-sm text-slate-500 mt-2">Sem responsável definido.</p>
          <% end %>
        </div>

      </aside>
    </div>
  </div>
</div>
